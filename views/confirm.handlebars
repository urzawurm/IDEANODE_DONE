

                <div>
                    <form action="/shoppingCart/buy" method="post">
                    <table class="table table-striped table-light"><!--striped 班馬--->
                      <thead class="table table-primary">
                        <tr>
                            <th></th>
                            <td>Customer Information</td>
                        </tr>
                      </thead>
                    </table>
                    <table class="table table-striped table-light">
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Product Name</td>
                                <td>Quantity </td>
                                <td>Amount$</td>
                            </tr>
                            {{#each allRecord}}
                            <tr>
                                <th scope="row"></th>
                                <td>
                                    <input type="hidden" name="productId" value={{productId}}>
                                    <input type="hidden" name="productName" value={{productName}}>
                                    {{productName}}
                                </td>
                                <td>
                                    <input type="hidden" name="qty" value={{qty}}>
                                    {{qty}}
                                </td>
                                <td>
                                    <input type="hidden" name="totalPrice" value={{price}}>
                                    ${{price}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <table class="table table-striped table-light">
                            <tr>
                                <th scope="row">2</th>
                                <td>
                                    <input type="hidden" name="userName" value={{name}}>
                                    Receiver: {{name}}
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Address:</td>
                                <td>
                                    <input type="hidden" name="userAddress" value={{address}}>
                                    {{address}}
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <th scope="row">4</th>
                                <td>Pickup method
                                <select id="shipping" name="shipMethod">
                                    {{#each shipMethod}}
                                        <option class="option" value={{amount}}>{{name}}</option>
                                    {{/each}}
                                </select>
                                </td>
                                <td></td>
                                <td>
                                    <div id="additional-fee">

                                    </div>
                                </td>
                            </tr>
                            <tr class="table-primary">
                                <th scope="row">5</th>
                                <td>Total Amount</td>
                                <td></td>
                                <td>
                                    <input type="hidden" name="finalAmount" value={{totalAmount}}>
                                    <div id="final-amount">
                                        {{totalAmount}}
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                </div>
                <div style="display:flex; justify-content: flex-end;">
                    
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-credit-card-fill" viewBox="0 0 16 16">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v1H0V4zm0 3v5a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7H0zm3 2h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1a1 1 0 0 1 1-1z"/>
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-paypal" viewBox="0 0 16 16">
                    <path d="M14.06 3.713c.12-1.071-.093-1.832-.702-2.526C12.628.356 11.312 0 9.626 0H4.734a.7.7 0 0 0-.691.59L2.005 13.509a.42.42 0 0 0 .415.486h2.756l-.202 1.28a.628.628 0 0 0 .62.726H8.14c.429 0 .793-.31.862-.731l.025-.13.48-3.043.03-.164.001-.007a.351.351 0 0 1 .348-.297h.38c1.266 0 2.425-.256 3.345-.91.379-.27.712-.603.993-1.005a4.942 4.942 0 0 0 .88-2.195c.242-1.246.13-2.356-.57-3.154a2.687 2.687 0 0 0-.76-.59l-.094-.061ZM6.543 8.82a.695.695 0 0 1 .321-.079H8.3c2.82 0 5.027-1.144 5.672-4.456l.003-.016c.217.124.4.27.548.438.546.623.679 1.535.45 2.71-.272 1.397-.866 2.307-1.663 2.874-.802.57-1.842.815-3.043.815h-.38a.873.873 0 0 0-.863.734l-.03.164-.48 3.043-.024.13-.001.004a.352.352 0 0 1-.348.296H5.595a.106.106 0 0 1-.105-.123l.208-1.32.845-5.214Z"/>
                    </svg>
                    
                    <button type="submit" class="btn btn-success">Buy!</button>
                    
                </div>
            </div>
            </form>
</div>

<script>
    const selector = document.getElementById('shipping');
    const additionalFee = document.getElementById('additional-fee');
    const finalAmount = document.getElementById('final-amount');
    let newFinalAmount = Number(finalAmount.innerText);
    additionalFee.innerText = selector.value;
    finalAmount.innerText = newFinalAmount + Number(selector.value);

    selector.addEventListener('change', function () {
        if (selector.value) {
            additionalFee.innerText = selector.value;
            finalAmount.innerText = newFinalAmount + Number(selector.value);
        }
    })




</script>