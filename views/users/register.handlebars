<style>
P{font-size: larger;
  font-family:cursive;
  font-style: oblique;
}
body{background-image: url("/img/background.jpg");
    background-size: cover;
}
h3{color: rgba(159, 6, 101, 0.996);
     font-family: fantasy;
}
</style>

<div class="row">
    <div class="col-md-5 mx-auto">
        <h3 class="text-center">Account Register</h3>
        <form action="/users/register" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input
                    type="text" 
                    class="form-control" 
                    name="name" 
                    value="{{name}}"
                    autocomplete="off"/>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input 
                    type="email" 
                    class="form-control" 
                    name="email" 
                    value="{{email}}"
                    autocomplete="off"/>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input 
                    type="address" 
                    class="form-control" 
                    name="address" 
                    value="{{address}}"
                    autocomplete="off"/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input 
                    type="password" 
                    class="form-control" 
                    name="password" 
                    value="{{password}}"/> {{!--same with name--}}
            </div>
            <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input 
                    type="password" 
                    class="form-control" 
                    name="password2" 
                    value="{{password2}}"/>
             </div>
        <button type="sumbit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>